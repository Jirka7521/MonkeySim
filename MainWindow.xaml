<Window x:Class="MonkeySim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfToolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        Title="Monkey Simulation" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Canvas Name="simulationCanvas" Grid.Column="0" Background="White" SizeChanged="Canvas_SizeChanged" />
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Monkey Height (m)" Margin="0,0,0,5" />
            <wpfToolkit:DoubleUpDown Name="heightNumericUpDown" Minimum="1" Maximum="1000" Value="5" ValueChanged="HeightNumericUpDown_ValueChanged" Margin="0,0,0,10" />
            <TextBlock Text="Shooter Distance (m)" Margin="0,0,0,5" />
            <wpfToolkit:DoubleUpDown Name="distanceNumericUpDown" Minimum="1" Maximum="1000" Value="10" ValueChanged="DistanceNumericUpDown_ValueChanged" Margin="0,0,0,10" />
            <TextBlock Name="errorTextBlock" Foreground="Red" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
